{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "migrate": "drizzle-kit generate && pnpm drizzle-kit migrate",
    "dev": "tsx watch --env-file=.env ./src/http/server.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "start": "node dist/http/server.js",
    "seed": "tsx --env-file=.env ./src/infra/db/seed.ts",
    "test": "vitest run --coverage",
    "test:debug": "vitest run --no-coverage"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/jwt": "^9.0.4",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@libsql/client": "^0.14.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.37.0",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.12.0",
    "singleton-module-registry": "^1.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.5.0",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^22.13.2",
    "drizzle-kit": "^0.29.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}