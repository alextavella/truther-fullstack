{
  "name": "truther-fullstack",
  "version": "1.0.0",
  "author": "alextavella",
  "scripts": {
    "dev": "pnpm run /^dev:/",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm run /^build:/",
    "build:backend": "pnpm --filter backend build",
    "start:backend": "pnpm --filter backend start",
    "test": "pnpm run /^test:/",
    "test:backend": "pnpm --filter backend test:cov",
    "lint": "eslint ./packages/**/src/**/*.ts",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --ignore-path .gitignore --write \"./packages/**/src/**/*.+(js|ts|json)\""
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@faker-js/faker": "^9.5.0",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^9.20.1",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^3.0.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --fix"
  }
}